<Page
    x:Class="StatisticsViewerWinUI.Dialogs.ExceptionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StatisticsViewerWinUI.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Horizontal">
        <ImageIcon Source="/Assets/warning-emoji.png" Width="32" Height="32"></ImageIcon>
        <TextBox 
            IsReadOnly="True"
            Text="{x:Bind Path=ExceptionText}" 
            Margin="5"
            MinWidth="400"
            TextWrapping="Wrap">
        </TextBox>
    </StackPanel>
</Page>
